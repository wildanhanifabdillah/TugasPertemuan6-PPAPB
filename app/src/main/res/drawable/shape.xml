<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow -->
    <item android:left="2dp" android:top="2dp" android:bottom="10dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#D5EDEDED" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Main content -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/grey" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
